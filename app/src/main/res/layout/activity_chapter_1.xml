<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hust_twj.androidart.MainActivity">

    <TextView
        android:id="@+id/tv_tes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="出现dialog  (生命周期不变)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_standard"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="standard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_single_top"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="singleTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_standard"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_activity_a"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Activity A"
        app:layout_constraintTop_toTopOf="@+id/tv_single_top"
        app:layout_constraintBottom_toBottomOf="@+id/tv_single_top"
        app:layout_constraintLeft_toRightOf="@+id/tv_single_top"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_single_task"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="singleTask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_single_top"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_single_instance"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="singleInstance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_single_task"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_intent_filter"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="singleInstance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_single_instance"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>
